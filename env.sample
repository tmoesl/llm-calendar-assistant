# =============================================================================
# LLM Calendar Assistant - Environment Configuration
# =============================================================================
# Copy this file to .env and configure your settings
#
# 🔴 USER-SPECIFIC: Must be customized with your credentials/preferences
# 🟠 PROJECT DEFAULTS: Required but standard values (don't change unless needed)
# 🟢 OPTIONAL OVERRIDES: Code has defaults, override if desired

# =============================================================================
# PROJECT
# =============================================================================
# 🟠 Project identification
PROJECT_NAME=llm-calendar-assistant

# =============================================================================
# DOCKER PORTS
# =============================================================================
# 🟠 External port mappings
API_PORT=8080
REDIS_PORT=6379
FLOWER_PORT=5555

# =============================================================================
# DATABASE
# =============================================================================
# 🔴 Connection credentials
DATABASE_HOST=your_supabase_host.supabase.com
DATABASE_PASSWORD=your_supabase_password
DATABASE_USER=postgres.your_project_id

# 🟢 Connection settings
DATABASE_NAME=postgres
DATABASE_PORT=6543

# =============================================================================
# GOOGLE CALENDAR
# =============================================================================
# Note (Docker): tokens -> named volume (token_data:/app/tokens) for multi-container sharing

# 🟢 User preferences
CALENDAR_USER_TIMEZONE=Australia/Sydney

# 🟢 Calendar settings
CALENDAR_ID=primary
CALENDAR_TOKEN_PATH=tokens/token.json
CALENDAR_CREDENTIALS_PATH=credentials.json

# 🟢 API configuration
CALENDAR_API_NAME=calendar
CALENDAR_API_VERSION=v3
CALENDAR_SCOPES=["https://www.googleapis.com/auth/calendar"]

# =============================================================================
# LLM PROVIDERS
# =============================================================================
# 🔴 API keys (at least one required)
OPENAI_API_KEY=sk-your-openai-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# 🟢 Processing settings
LLM_CONFIDENCE_THRESHOLD=0.7

# 🟢 OpenAI settings
OPENAI_MODEL=gpt-4o
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_TEMPERATURE=0.0
OPENAI_MAX_TOKENS=2048
OPENAI_MAX_RETRIES=3
OPENAI_TIMEOUT=30

# 🟢 Anthropic settings
ANTHROPIC_MODEL=claude-sonnet-4-20250514
ANTHROPIC_TEMPERATURE=0.0
ANTHROPIC_MAX_TOKENS=2048
ANTHROPIC_MAX_RETRIES=3
ANTHROPIC_TIMEOUT=30

# =============================================================================
# WORKER (CELERY)
# =============================================================================
# 🟢 Worker settings
CELERY_CONCURRENCY=4
CELERY_LOG_LEVEL=DEBUG

# =============================================================================
# LOGGING
# =============================================================================
# 🟢 Application logging
LOG_LEVEL=DEBUG
LOG_CONSOLE_OUTPUT=true
LOG_FILE_OUTPUT=true 