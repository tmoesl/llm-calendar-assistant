# =============================================================================
# Complete Configuration Template
# =============================================================================
# Copy this file to .env and configure the required values
#
# üè∑Ô∏è Tags: (Infrastructure) = Docker / Makefile
# üè∑Ô∏è Tags: (App) = Python application runtime

# ‚úÖ QUICK START (Set these required values)
# DATABASE_HOST, DATABASE_PASSWORD, DATABASE_USER
# OPENAI_API_KEY, ANTHROPIC_API_KEY

# ‚ÑπÔ∏è NOTE: API, Redis, and Flower ports refer to external host ports.
# Internal container ports are hardcoded (API: 8080, Redis: 6379, Flower: 5555).

# =============================================================================
# PROJECT CONFIGURATION
# =============================================================================
# üìå Must Exist
PROJECT_NAME=llm-calendar-assistant

# =============================================================================
# API CONFIGURATION (Infrastructure)
# =============================================================================
# üìå Must Exist
API_PORT=8080

# =============================================================================
# WORKER CONFIGURATION (App + Infrastructure)
# =============================================================================
# üìå Must Exist
FLOWER_HOST=localhost
FLOWER_PORT=5555

# üí° Optional
CELERY_CONCURRENCY=4
CELERY_LOG_LEVEL=DEBUG

# =============================================================================
# REDIS CONFIGURATION (App + Infrastructure)
# =============================================================================
# üìå Must Exist
REDIS_HOST=localhost
REDIS_PORT=6379

# =============================================================================
# DATABASE CONFIGURATION (App)
# =============================================================================
# üîß Must Set
DATABASE_HOST=your_supabase_host.supabase.com
DATABASE_PASSWORD=your_supabase_password
DATABASE_USER=postgres.your_project_id

# üí° Optional
DATABASE_NAME=postgres
DATABASE_PORT=6543

# =============================================================================
# CALENDAR CONFIGURATION (App) 
# =============================================================================
# üí° Optional - Google Calendar Settings
CALENDAR_ID=primary
CALENDAR_USER_TIMEZONE=Australia/Sydney
CALENDAR_TOKEN_PATH=token.json
CALENDAR_CREDENTIALS_PATH=credentials.json
CALENDAR_API_NAME=calendar
CALENDAR_API_VERSION=v3
CALENDAR_SCOPES=["https://www.googleapis.com/auth/calendar"]

# =============================================================================
# LLM PROVIDERS (App)
# =============================================================================
# üîß Must Set
OPENAI_API_KEY=sk-your-openai-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# üí° Optional - OpenAI Settings
OPENAI_MODEL=gpt-4o
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_TEMPERATURE=0.0
OPENAI_MAX_TOKENS=2048
OPENAI_MAX_RETRIES=3
OPENAI_TIMEOUT=30

# üí° Optional - Anthropic Settings
ANTHROPIC_MODEL=claude-sonnet-4-20250514
ANTHROPIC_TEMPERATURE=0.0
ANTHROPIC_MAX_TOKENS=2048
ANTHROPIC_MAX_RETRIES=3
ANTHROPIC_TIMEOUT=30

# üí° Optional - LLM Processing Settings
LLM_CONFIDENCE_THRESHOLD=0.7

# =============================================================================
# LOGGING CONFIGURATION (App)
# =============================================================================
# üí° Optional
LOG_LEVEL=DEBUG
LOG_CONSOLE_OUTPUT=true
LOG_FILE_OUTPUT=true

# =============================================================================
